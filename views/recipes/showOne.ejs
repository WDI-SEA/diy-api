<h1><%= aRecipe.name %></h1>

<h2><%= aRecipe.brewingdevice %></h2>
<h2><%= aRecipe.grinder %>: <%= aRecipe.grindsetting %> mark</h2>
<h3><%= aRecipe.groundcoffee %> grams of ground coffee</h3>
<h3><%= aRecipe.watertemp %> F</h3>
<p><%= aRecipe.description %></p>

<form method="POST" action="/recipes/<%= aRecipe.id %>/?_method=DELETE">
    <input type="Submit" value="Delete">
</form>


<form method="GET" action="/recipes/<%= aRecipe.id %>/edit">
    <input type="Submit" value="Edit">
</form>

<hr>

<h3>Brewing Devices that can be used with this Recipe:</h3>
<% someBrewingDevices.forEach(device => { %>
    <a style='color:white;' href="/brewingdevices/<%= device.id %>"><%= device.name %></a>
<% }) %>
    

