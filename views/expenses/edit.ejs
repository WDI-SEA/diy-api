<form method="POST", action="/expenses/<%= expense.id %>/?_method=PUT">
    <div class="form-group">
      <label for="date">Date(mm/dd/yy):</label>
      <input type="text" class="form-control" id="date" name="date" value="<%=expense.date%>" required>
    </div>
  
    <div class="form-group">
      <label for="merchant">Merchant:</label>
      <input type="text" name="merchant" id="merchant" class="form-control" value="<%=merchant.name%>" required>
    </div>
  
    <div class="form-group">
      <label for="category">Category:</label>
      <select name="category" id="category" class="form-control" required>
        <% categories.forEach(function(category) { %>
          <option value="<%= category.id %>"><%= category.name %></option>
        <% }) %>
      </select>
      <p>To add new category, please go <a href="/categories/new">here</a></p>
    </div>
  
    <div class="form-group">
      <label for="amount">Amount:</label>
      <input type="number" name="cost" id="cost" class="form-control" value="<%=expense.cost%>" required>
    </div>
  
    <div class="form-group">
      <label for="description">Description:</label>
      <textarea type="text" class="form-control" id="description" name="description" value="<%=expense.description%>" required></textarea>
    </div>
  
    <button type="submit" class="btn btn-primary">Edit Expense</button>
  </form>