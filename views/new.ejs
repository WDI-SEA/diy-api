<h1>New Hitbox Form</h1>

<form action="/hitboxes" method="POST">
    <label for="name">Name:</label>
    <input type="text" name="name" id="name">
    <br />
    <label for="length">Length:</label>
    <input type="number" step="0.01" name="length" id="length" >
    <br />
    <label for="width">Width:</label>
    <input type="number" step="0.01" name="width" id="width" >
    <br />
    <label for="height">Height:</label>
    <input type="number" step="0.01" name="height" id="height" >
    <br />
    <label for="angle">Angle:</label>
    <input type="number" step="0.01" name="angle" id="angle" >
    <br />
    <button type="submit">Create new hitbox</button>
    <!-- <input type="hidden" name="createdAt" id="createdAt" value="Date">
    <input type="hidden" name="modifiedAt" id="modifiedAt" value="Date"> -->
</form>